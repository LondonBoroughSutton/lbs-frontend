{% set headingLevel = params.heading.headingLevel if params.heading.headingLevel else 2 %}
<div class="lbs-card {% if params.bgColour %}lbs-card--alt{% endif %}">
  <h{{ headingLevel}} class="govuk-heading-m">{{ params.heading.title }}</h{{ headingLevel}}>
  {%- if params.cardBodyHtml %}
  {{ params.cardBodyHtml | safe }}
  {%- endif %}
  {%- if params.linkItems %}
    <ul>
   {% for item in params.linkItems %}
     <li><a href="{{ item.href }}">{{ item.title }}</a></li>
    {% endfor %}
    </ul>
  {%- endif %}
</div>
