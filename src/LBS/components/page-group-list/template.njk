<nav class="lbs-page-group-list">
  <h2 class="lbs-page-group-list__title">{{ params.heading | default('In this section:') }}</h2>
  <ol>
    {% for item in params.linkItems %}
      <li {% if item.current %}class="lbs-page-group-list__item--active"{% endif %}>
      {% if item.current !== true %}<a href="{{ item.href }}">{{ item.text }}</a>{% else %}{{ item.text }}{% endif %}
      </li>
    {% endfor %}
  </ol>
</nav>
