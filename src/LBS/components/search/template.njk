<form class="lbs-search" action="/" method="post" autocomplete="off">
    <label class="govuk-label govuk-label--l govuk-visually-hidden" for="search">
        Search Sutton.gov.uk
    </label>
    <input type="text" name="search" class="lbs-search__input" id="lbs-search__box" placeholder="{{ params.placeholderText | default('Search') }}" />
    <button type="submit" class="lbs-search__btn" id="lbs-search__btn"></button>
</form>