{% from 'govuk/components/back-link/macro.njk' import govukBackLink %}
{% from 'govuk/components/input/macro.njk' import govukInput %}
{% from '../../../../src/LBS/components/page-header/macro.njk' import lbsPageHeader %}

{% set mainClasses = 'govuk-main-wrapper--auto-spacing govuk-width-container' %}

{% extends "_generic.njk" %}

{% block beforeContent %}

{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: "Back",
    href: "/"
  }) }}

  <h2>Default notification</h2>

  {{ govukInput({
    label: {
      text: "What is the name of the event?",
      classes: "govuk-label--l",
      isPageHeading: true
    },
    id: "event-name",
    name: "event-name"
  }) }}

  <h2>Width examples</h2>

  {{ govukInput({
    label: {
      text: "20 character width"
    },
    classes: "govuk-input--width-20",
    id: "width-20",
    name: "width-20"
  }) }}

  {{ govukInput({
    label: {
      text: "10 character width"
    },
    classes: "govuk-input--width-10",
    id: "width-10",
    name: "width-10"
  }) }}

  {{ govukInput({
    label: {
      text: "5 character width"
    },
    classes: "govuk-input--width-5",
    id: "width-5",
    name: "width-5"
  }) }}

  {{ govukInput({
    label: {
      text: "4 character width"
    },
    classes: "govuk-input--width-4",
    id: "width-4",
    name: "width-4"
  }) }}

  {{ govukInput({
    label: {
      text: "3 character width"
    },
    classes: "govuk-input--width-3",
    id: "width-3",
    name: "width-3"
  }) }}

  {{ govukInput({
    label: {
      text: "2 character width"
    },
    classes: "govuk-input--width-2",
    id: "width-2",
    name: "width-2"
  }) }}

  <h2>With hint text</h2>

  {{ govukInput({
    label: {
      text: "What is the name of the event?",
      classes: "govuk-label--l",
      isPageHeading: true
    },
    hint: {
      text: "The name you’ll use on promotional material."
    },
    id: "event-name",
    name: "event-name"
  }) }}

  <h2>Error state</h2>

  {{ govukInput({
    label: {
      text: "What is the name of the event?",
      classes: "govuk-label--l",
      isPageHeading: true
    },
    id: "event-name",
    name: "event-name",
    hint: {
      text: "The name you’ll use on promotional material."
    },
    errorMessage: {
      text: "Enter an event name"
    }
  }) }}

{% endblock %}
